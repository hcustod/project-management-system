@model Project

@{
    ViewData["Title"] = "Delete Project";
}

<div class="container my-5">

    <div class="text-center mb-4">
        <h2 class="text-danger fw-bold"><i class="fas fa-trash-alt me-2"></i> Delete Project</h2>
        <p class="lead text-muted">Are you sure you want to permanently delete this project?</p>
    </div>

    <div class="card shadow border-danger">
        <div class="card-body">
            <h4 class="card-title text-dark">@Model.Name</h4>
            <p class="card-text text-muted">@Model.Description</p>

            <dl class="row mt-4">
                <dt class="col-sm-3">Start Date</dt>
                <dd class="col-sm-9">@Model.StartDate.ToString("yyyy-MM-dd")</dd>

                <dt class="col-sm-3">End Date</dt>
                <dd class="col-sm-9">@Model.EndDate.ToString("yyyy-MM-dd")</dd>

                <dt class="col-sm-3">Status</dt>
                <dd class="col-sm-9">@Model.Status</dd>
            </dl>

            <form asp-action="Delete" method="post" class="mt-4 d-flex justify-content-start gap-2">
                <input type="hidden" asp-for="ProjectId" />
                <button type="submit" class="btn btn-danger">
                    <i class="fas fa-trash-alt me-1"></i> Delete
                </button>
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="fas fa-arrow-left me-1"></i> Cancel
                </a>
            </form>
        </div>
    </div>
</div>
