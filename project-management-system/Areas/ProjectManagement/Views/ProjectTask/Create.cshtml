@model ProjectTask

@{
    ViewData["Title"] = "Create Task";
}

<div class="container my-5">
    <div class="text-center mb-4">
        <h2 class="fw-bold text-success"><i class="fas fa-plus-circle me-2"></i>@ViewData["Title"]</h2>
        <p class="lead text-muted">Add a new task to the selected project. Provide a clear title and a brief description.</p>
    </div>

    <div class="card shadow">
        <div class="card-body">
            <form asp-action="Create" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                @Html.HiddenFor(model => model.ProjectTaskId)
                @Html.HiddenFor(model => model.ProjectId)

                <div class="mb-3">
                    <label asp-for="Title" class="form-label fw-semibold text-dark"></label>
                    <input asp-for="Title" class="form-control" />
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Description" class="form-label fw-semibold text-dark"></label>
                    <textarea asp-for="Description" class="form-control" rows="4"></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>

                <div class="d-flex justify-content-between">
                    <button type="submit" class="btn btn-success">
                        <i class="fas fa-plus me-1"></i> Create
                    </button>
                    <a asp-action="Index" asp-route-projectId="@Model.ProjectId" class="btn btn-secondary">
                        <i class="fas fa-arrow-left me-1"></i> Back to Tasks
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
