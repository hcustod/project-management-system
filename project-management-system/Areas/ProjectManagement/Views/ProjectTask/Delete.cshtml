@model ProjectTask

@{
    ViewData["Title"] = "Delete Task";
}

<div class="container my-5">
    <div class="text-center mb-4">
        <h2 class="text-danger fw-bold"><i class="fas fa-trash-alt me-2"></i>@ViewData["Title"]</h2>
        <p class="lead text-muted">Are you sure you want to delete this task? This action cannot be undone.</p>
    </div>

    <div class="card shadow mb-4">
        <div class="card-body">
            <dl class="row mb-0">
                <dt class="col-sm-3 fw-semibold text-dark">
                    @Html.DisplayNameFor(model => model.Title)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Title)
                </dd>

                <dt class="col-sm-3 fw-semibold text-dark">
                    @Html.DisplayNameFor(model => model.Description)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Description)
                </dd>

                <dt class="col-sm-3 fw-semibold text-dark">
                    Project
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Project.Name)
                </dd>
            </dl>
        </div>
    </div>

    <form asp-action="Delete" method="post" class="d-flex gap-2">
        @Html.HiddenFor(model => model.ProjectTaskId)

        <button type="submit" class="btn btn-danger">
            <i class="fas fa-trash me-1"></i> Confirm Delete
        </button>
        <a asp-action="Index" asp-route-projectId="@Model.ProjectId" class="btn btn-secondary">
            <i class="fas fa-arrow-left me-1"></i> Cancel
        </a>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
