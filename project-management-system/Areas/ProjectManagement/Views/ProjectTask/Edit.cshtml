@model ProjectTask

@{
    ViewData["Title"] = "Edit Task";
}

<div class="container my-5">
    <div class="text-center mb-4">
        <h2 class="text-warning fw-bold"><i class="fas fa-edit me-2"></i>Edit Task</h2>
        <p class="lead text-muted">Modify the task details below and save your changes.</p>
    </div>

    <div class="card shadow">
        <div class="card-body">
            <form asp-action="Edit" method="post">
                @Html.HiddenFor(model => model.ProjectTaskId)
                @Html.HiddenFor(model => model.ProjectId)

                <div class="mb-3">
                    <label asp-for="Title" class="form-label fw-semibold">Title</label>
                    <input asp-for="Title" class="form-control" />
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>

                <div class="mb-4">
                    <label asp-for="Description" class="form-label fw-semibold">Description</label>
                    <textarea asp-for="Description" class="form-control" rows="4"></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>

                <div class="d-flex gap-2">
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-save me-1"></i> Save
                    </button>
                    <a asp-action="Index" asp-route-projectId="@Model.ProjectId" class="btn btn-secondary">
                        <i class="fas fa-arrow-left me-1"></i> Back to List
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
